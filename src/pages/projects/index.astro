---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { ArrowRight } from 'lucide-react';

const projects = (await getCollection('projects')).sort((a, b) => a.data.order - b.data.order);
---

<Layout title="Projects">
  <div class="max-w-7xl mx-auto px-4 py-12 sm:py-20">
    <div class="max-w-3xl mx-auto text-center mb-16">
      <h1 class="text-4xl font-bold text-gray-900 mb-4" data-i18n-key="nav.project">Projects</h1>
      <p class="text-lg text-gray-600" data-i18n-key="project.subtitle">
        Our lab explores the frontiers of artificial intelligence, with a focus on computer vision and machine learning.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map(project => {
        const isExternal = project.data.link?.startsWith('http');
        return (
          <a 
            href={project.data.link} 
            target={isExternal ? "_blank" : undefined}
            rel={isExternal ? "noopener noreferrer" : undefined}
            class="group relative bg-white border border-gray-100 rounded-2xl overflow-hidden hover:shadow-lg transition-all duration-300 block"
          >
            {project.data.cover && (
              <div class="h-48 overflow-hidden bg-gray-100">
                <img 
                  src={project.data.cover.src} 
                  alt={project.data.title} 
                  class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                />
              </div>
            )}
            
            <div class="p-6">
              <h2 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-blue-600 transition-colors">
                {project.data.title}
              </h2>
              <p class="text-gray-600 text-sm mb-4 line-clamp-3">
                {project.data.description}
              </p>
              <span class="inline-flex items-center text-sm font-medium text-blue-600 group-hover:text-blue-700">
                <span data-i18n-key="project.learnMore">Open link</span> <ArrowRight className="ml-1 w-4 h-4 group-hover:translate-x-1 transition-transform" />
              </span>
            </div>
          </a>
        );
      })}
    </div>

    {projects.length === 0 && (
      <div class="text-center py-20">
        <p class="text-gray-500" data-i18n-key="project.noAreas">No projects defined. Add markdown files to src/content/projects/</p>
      </div>
    )}
  </div>
</Layout>
