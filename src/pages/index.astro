---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";
import { Image } from "astro:assets";
import { ArrowRight } from "lucide-react";
import { SITE } from "../config";
import ProjectCard from "../components/ProjectCard.astro";

const projects = (await getCollection("projects"))
  .sort((a, b) => a.data.order - b.data.order)
  .slice(0, 3);
---

<Layout title="Home">
  <!-- Hero Section -->
  <section class="relative h-screen min-h-[600px] flex items-center justify-center overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0 z-0">
      {SITE.hero.image ? (
        <Image 
          class="w-full h-full object-cover" 
          src={SITE.hero.image} 
          alt={SITE.hero.title}
          loading="eager"
          fetchpriority="high"
          decoding="sync"
          quality={60}
          format="webp"
          widths={[640, 1024, 1920]}
          sizes="100vw"
        />
      ) : (
        <div class="w-full h-full bg-gradient-to-br from-gray-900 to-gray-800"></div>
      )}
      <!-- Dark Gradient Overlay for Readability -->
      <div class="absolute inset-0 bg-gradient-to-r from-black/90 via-black/50 to-transparent"></div>
      <!-- Subtle Texture (CSS only) -->
      <div class="absolute inset-0 opacity-[0.03]" style="background-image: radial-gradient(#ffffff 1px, transparent 1px); background-size: 32px 32px;"></div>
    </div>

    <!-- Content -->
    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full">
      <div class="max-w-3xl">
        <h1 class="text-5xl font-extrabold text-white sm:text-6xl md:text-7xl mb-6 drop-shadow-lg leading-tight">
          <span class="block xl:inline">{SITE.hero.title}</span>
        </h1>
        <p class="mt-4 text-xl text-gray-300 sm:max-w-2xl md:text-2xl drop-shadow-md">
          {SITE.hero.subtitle}
        </p>
        <div class="mt-10 flex gap-4">
          <a href="https://kanglabs.net/" target="_blank" class="flex items-center justify-center px-8 py-4 border border-transparent text-lg font-medium rounded-full text-black bg-white hover:bg-gray-100 transition-all duration-300 shadow-[0_0_20px_rgba(255,255,255,0.3)] hover:shadow-[0_0_30px_rgba(255,255,255,0.5)]" data-i18n-key="hero.viewSite">
          </a>
        </div>
      </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce text-white/50">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </section>

  <!-- Projects -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-end mb-8">
        <h2 class="text-3xl font-bold text-gray-900" data-i18n-key="section.projects">Featured Projects</h2>
        <a href="/projects" class="text-blue-600 hover:text-blue-700 font-medium flex items-center gap-1 group">
          <span data-i18n-key="section.viewAll">View all</span> <ArrowRight className="w-4 h-4 group-hover:translate-x-1 transition-transform" />
        </a>
      </div>

      {projects.length > 0 ? (
        <div class="grid gap-6 md:grid-cols-3">
          {projects.map(project => <ProjectCard project={project} />)}
        </div>
      ) : (
        <p class="text-gray-500" data-i18n-key="project.noAreas">No projects available yet.</p>
      )}
    </div>
  </section>
</Layout>
